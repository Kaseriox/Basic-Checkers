      <None Remove="Assets\KingB.png" />
      <Resource Include="Assets\KingB.png" />
      <None Remove="Assets\KingW.png" />
      <Resource Include="Assets\KingW.png" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\CheckerLogic\CheckerLogic.csproj" />
      <ProjectReference Include="..\Helpers\Helpers.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Images.cs">
        <DependentUpon>App.xaml</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <Page Update="Menus\GameOverMenu.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

</Project>
